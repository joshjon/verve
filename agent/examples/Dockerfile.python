# Verve Agent with Python support
# Build: docker build -f agent/examples/Dockerfile.python -t verve-agent:python ./agent
# Use:   AGENT_IMAGE=verve-agent:python make run-worker

FROM verve-agent:latest

USER root

# Install Python and common packages
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Create symlinks for convenience
RUN ln -sf /usr/bin/python3 /usr/bin/python

USER agent
