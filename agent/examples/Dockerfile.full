# Verve Agent with multiple language support (Python, Go, Rust)
# Build: docker build -f agent/examples/Dockerfile.full -t verve-agent:full ./agent
# Use:   AGENT_IMAGE=verve-agent:full make run-worker
#
# Note: This creates a larger image (~1.5GB) but supports most common languages

FROM ghcr.io/joshjon/verve-agent:latest

USER root

# Install Python
RUN apk add --no-cache \
    python3 \
    py3-pip \
    py3-virtualenv \
    build-base \
    && ln -sf /usr/bin/python3 /usr/bin/python

# Install Go from official image
COPY --from=golang:1.23-alpine /usr/local/go /usr/local/go
ENV PATH="/usr/local/go/bin:${PATH}"

# Install Rust
USER agent
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/home/agent/.cargo/bin:${PATH}"

# Set Go path
ENV GOPATH="/home/agent/go"
ENV PATH="${GOPATH}/bin:${PATH}"
