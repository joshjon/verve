# Verve Agent with multiple language support (Python, Go, Rust)
# Build: docker build -f agent/examples/Dockerfile.full -t verve-agent:full ./agent
# Use:   AGENT_IMAGE=verve-agent:full make run-worker
#
# Note: This creates a larger image (~1.5GB) but supports most common languages

FROM verve-agent:latest

USER root

# Install Python and Go - works with both Debian (apt-get) and Wolfi (apk)
RUN if command -v apk > /dev/null; then \
        apk add --no-cache python3 py3-pip go build-base; \
    else \
        apt-get update && apt-get install -y \
            python3 python3-pip python3-venv build-essential \
        && ln -sf /usr/bin/python3 /usr/bin/python \
        && rm -rf /var/lib/apt/lists/* \
        && curl -fsSL https://go.dev/dl/go1.22.0.linux-amd64.tar.gz | tar -C /usr/local -xzf -; \
    fi

ENV PATH="/usr/local/go/bin:${PATH}"

# Install Rust (works on both)
USER agent
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/home/agent/.cargo/bin:${PATH}"

# Set Go path
ENV GOPATH="/home/agent/go"
ENV PATH="${GOPATH}/bin:${PATH}"
