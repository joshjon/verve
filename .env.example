# GitHub token (required for PR creation, status sync, and listing available repos)
GITHUB_TOKEN=your_github_token_here

# GitHub repos for the worker (comma-separated, must be added to Verve via the UI/API first)
GITHUB_REPOS=owner/repo1,owner/repo2

# Anthropic API key (required for Claude Code agent)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model for agent (optional, defaults to haiku)
CLAUDE_MODEL=sonnet

# Custom agent image (optional, defaults to verve-agent:latest)
AGENT_IMAGE=verve-agent:latest

# Max concurrent tasks for worker (optional, defaults to 3)
MAX_CONCURRENT_TASKS=3
