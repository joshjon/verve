# Enable embedded UI (set to "true" to serve the frontend from the server)
UI=true

# 32-byte hex key for encrypting secrets (required for GitHub token storage)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Anthropic API key for AI-powered epic planning (optional)
ANTHROPIC_API_KEY=

# PostgreSQL connection (omit POSTGRES_HOST_PORT to use SQLite instead)
# For dev with docker-compose.dev.yml, leave POSTGRES_HOST_PORT commented out to use SQLite
POSTGRES_USER=verve
POSTGRES_PASSWORD=verve
# POSTGRES_HOST_PORT=postgres:5432
POSTGRES_DATABASE=verve

# SQLite file directory (only used when Postgres is not configured)
# For dev: set to "data/" to persist SQLite data locally
# Omit to use in-memory SQLite (data will not persist)
SQLITE_DIR=data/
